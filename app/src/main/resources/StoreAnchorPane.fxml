<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane fx:id="storeAnchorPane" minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.esgi.projet.softwareneedsyou.controllers.StoreController">
   <children>
      <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="35.0">
         <items>
            <TableView fx:id="pluginsTableView" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn minWidth="-1.0" prefWidth="200.0" text="Nom" />
                <TableColumn prefWidth="75.0" text="Type" />
              </columns>
            </TableView>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox prefHeight="30.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="titlePlugin" maxHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" text="Titre" />
                        <Button fx:id="downloadButton" maxHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" text="Telecharger" />
                     </children>
                  </HBox>
                  <ScrollPane fx:id="pluginScrollPane" fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <AnchorPane>
                           <children>
                              <TextFlow fx:id="informationPluginTextFlow" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </children>
                        </AnchorPane>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </items></SplitPane>
      <ButtonBar maxHeight="-Infinity" minHeight="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="30.0" prefWidth="200.0" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
        <buttons>
            <Button fx:id="refreshPlugin" mnemonicParsing="false" text="Rafraichir" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
